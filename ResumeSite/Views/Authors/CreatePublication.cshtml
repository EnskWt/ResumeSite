@model PublicationAddRequest

@{
    ViewBag.Title = "New publication";
}

<div class="form-container">

    <a asp-controller="Publications" asp-action="Index" class="link-hover">Back to publications</a>
    <h2 class="text-large">Create publication</h2>

    <div class="publication-box">

        <form asp-controller="Publications" asp-action="CreatePublication" method="post" enctype="multipart/form-data">

            <label asp-for="Images" class="form-label pt">Picture</label>
            <input asp-for="Images" type="file" class="form-input" multiple/>
            <span asp-validation-for="Images" class="text-red"></span>

            <hr />

            <label asp-for="Title" class="form-label pt">Title</label>
            <input asp-for="Title" class="form-input" />
            <span asp-validation-for="Title" class="text-red"></span>

            <hr />

            <label asp-for="Description" class="form-label pt">Description</label>
            <textarea asp-for="Description" class="form-input"></textarea>
            <span asp-validation-for="Description" class="text-red"></span>

            <hr />

            <button class="button button-green-back">Create publication</button>
            <div asp-validation-summary="All" class="text-red"></div>

        </form>

    </div>
</div>

@section scripts
    {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.4/jquery.validate.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}